<p id="notice">
    <%= notice %>
</p>

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-10">
        <section>
            <div class="container">
                <div class="row">
                    <div class="page-header">
                        <h1>Users</h1>
                    </div>
                    <div class="col-md-4" style="margin-left: 50px; ">
                        <%= link_to 'Add User', signup_path, class: 'btn-warning' %>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-12">
                        <table class="table" id="table">
                            <thead>
                                <tr>
                                    <th>First name</th>
                                    <th>Last name</th>
                                    <th>Company</th>
                                    <th>Job Title</th>

                                    <th colspan="3"></th>
                                </tr>
                            </thead>
                            <tbody>
                                <% @users.each do |user| %>
                                    <tr>
                                        <td>
                                            <%= user.first_name %>
                                        </td>
                                        <td>
                                            <%= user.last_name %>
                                        </td>
                                        <td>
                                            <%= user.company.company_name %>
                                        </td>
                                        <td>
                                            <%= user.title%>
                                        </td>

                                        <td>
                                            <%= link_to 'Show', user, class: 'btn' %>
                                        </td>
                                        <td>
                                            <%= link_to 'Edit', edit_user_path(user), class: 'btn' %>
                                        </td>
                                        <td>
                                            <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn' %>
                                        </td>

                                    </tr>
                                    <% end %>

                            </tbody>
                        </table>
                        <hr>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>
