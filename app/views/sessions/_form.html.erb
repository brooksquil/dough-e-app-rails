<div class="loginForm">
    <center>
        <div class="form-group">
            <%= form_tag login_path do %>
                <div class="field">
                    <%= label_tag :email %><br />
                        <%= text_field_tag(:email, params[:email], {:class => 'form-control'}) %>
                </div>
                <div class="field">
                    <%= label_tag :password %><br />
                        <%= password_field_tag(:password) %>
                </div>
                <div class="actions">
                    <%= submit_tag "Log In", {:class => 'btn-primary mt-3'} %>
                </div>
                <% end %>
        </div>
    </center>
</div>