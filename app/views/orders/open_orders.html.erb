<p id="notice">
    <%= notice %>
</p>

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-10">
        <section>
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="page-header">
                            <h1>All Open Orders</h1>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-12">
                        <table class="table" id="table">
                            <thead>
                                <tr>

                                    <th>Order Number</th>
                                    <th>Delivery date</th>
                                    <th>Customer</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% @orders.each do |order| %>
                                    <tr>
                                        <td>
                                            <%= order.id %>
                                        </td>
                                        <td>
                                            <%= order.delivery_date %>
                                        </td>
                                        <td>
                                            <%= order.company.company_name %>
                                        </td>
                                        <td>
                                            <%= link_to 'Detail', order, class: "btn-success" %>
                                        </td>
                                        <td>
                                            <%= link_to 'Edit', edit_order_path(order), class: "btn-primary"  %>
                                        </td>
                                        <td>
                                            <%= link_to 'Cancel', order, class: "btn-danger", method: :delete, data: { confirm: 'Are you sure you sure?' } %>
                                        </td>

                                    </tr>
                                    <% end %>

                            </tbody>
                        </table>
                        <hr>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>