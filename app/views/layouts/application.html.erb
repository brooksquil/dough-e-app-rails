<!DOCTYPE html>
<html>

<head>
    <title>dough-e Wholsale Bakery Mangement Software</title>
    <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
        <%= stylesheet_link_tag    'https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css' %>
            <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
                <%= csrf_meta_tags %>
</head>

<body>
    <div>
        <% if logged_in? %>
            <nav class="navbar navbar-expand-lg">
                <%= link_to "Mac Factory", root_path, class: "navbar-brand" %>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                  </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav">

                            <li class="nav-item">
                                <%= link_to "Product Catalog", products_path, class: "nav-link" %>
                            </li>
                        </ul>

                    </div>
                    <div class="collapse navbar-collapse" id="navbarNav">



                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item align-self-end">
                            </li>
                            <li class="nav-item align-self-end">
                                <%= link_to "Log Out", logout_path, class: "nav-link" %>
                            </li>
                        </ul>
                    </div>
            </nav>
            <% else %>
                <nav class="navbar navbar-expand-lg">
                    <%= link_to "Mac Factory", root_path, class: "navbar-brand" %>
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                                    <span class="navbar-toggler-icon"></span>
                                  </button>
                        <div class="collapse navbar-collapse" id="navbarNav">
                            <ul class="navbar-nav">


                            </ul>

                        </div>
                        <div class="collapse navbar-collapse" id="navbarNav">

                            <div class="collapse navbar-collapse" id="navbarNav">
                                <ul class="navbar-nav ml-auto">
                                    <li class="nav-item align-self-end">
                                    </li>
                                    <li class="nav-item align-self-end">
                                        <%= link_to 'Login', login_path, class: "" %>

                                    </li>
                                </ul>

                            </div>
                </nav>

                <% end %>

                    <div class="container">
                        <div class="col-md-2">
                            <div class="dash">
                                <% if logged_in? %>
                                    <% if @current_user.admin? %>

                                        <div id="mySidenav" class="sidenav">
                                            <div>
                                                <%= link_to "Today's Production", todays_production_path %>
                                            </div>
                                            <div>
                                                <%= link_to "Manage Orders", orders_path %>
                                            </div>

                                            <div>
                                                <%= link_to "Manage Accounts", companies_path %>
                                            </div>
                                            <div>
                                                <%= link_to "Manage Users", users_path %>
                                            </div>
                                            <div>
                                                <%= link_to "Manage Products", products_path %>
                                            </div>
                                        </div>
                                        <% else %>
                                            <div id="mySidenav" class="sidenav">

                                                <div>
                                                    <%= link_to "Current Order", shopping_cart_path %>
                                                </div>
                                                <div>
                                                    <%= link_to "Past Orders", company_all_orders_by_users_company_path %>
                                                </div>
                                                <div>
                                                    <%= link_to "Open Orders", company_open_orders_path %>
                                                </div>
                                                <div>
                                                    <%= link_to "Browse Products", products_path %>
                                                </div>
                                            </div>
                                            <% end %>
                                                <% end %>
                            </div>
                        </div>
                    </div>



                    <div class="container">

                        <%= yield %>

                    </div>
                    </div>


</body>

</html>